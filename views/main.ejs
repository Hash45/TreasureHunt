<!DOCTYPE html>
<html>
<head>
  <style>
    body {
      background-image: url("g.gif");
      background-size: cover;
      background-position: center;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }

    .play-button {
      background-color: #ffd700;
      border-radius: 5px;
      box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1);
      color: #fff;
      cursor: pointer;
      font-size: 1.6rem;
      padding: 10px;
      transition: all 0.3s ease;
      width: 15%;
      display: block;
      margin-left: auto;
      margin-right: auto;
      margin-top: 500px;
    }

    p {
      color: white;
      text-align: center;
      font-size: x-large;
    }

    h1 {
      color: white;
      text-align: center;
      margin-top: 100px;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.5);
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1;
    }

    .specifications {
      display: flex;
      gap: 20px;
    }

    .specifications a {
      color: #fff;
      text-decoration: none;
      font-size: 18px;
      font-weight: bold;
      transition: color 0.3s ease;
      display: flex;
      align-items: center;
    }

    .specifications a img {
      width: 20px;
      height: 20px;
      margin-right: 5px;
    }

    .specifications a:hover {
      color: #ffd700;
    }

    .lef {
      margin-right: 10px;
    }

    @media screen and (max-width: 768px) {
      header {
        flex-direction: column;
        align-items: center;
      }

      .specifications {
        margin-top: 10px;
      }

      h1 {
        font-size: 36px;
      }

      .play-button {
        width: 50%;
      }
    }
  </style>
  </head>
  <body>
    <header>
      <div class="specifications">
        <div><a href="/"><img src="ho.png" alt="Home"><span> Home</span></a></div>
        <div><a href="/instructions"><img src="in.png" alt="instructions"><span> Instructions</span></a></div>
        <div><a href="/leaderboard"><img src="le.png" alt="leaderboard"><span> Leaderboard</span></a></div>
        <div class="lef"><a href="/profile"><img src="profile.png" alt="profile"><span>Profile</span></a></div>
        <div class="lef"><a href="/logout"><img src="log.png" alt="logout"><span> Logout</span></a></div>
      </div>
    </header>
    <h1>Hii <%= name %>, Welcome to this adventure !!</h1>
    <p>Check the Rules before starting the game</p>
    <button id="play" class="play-button">Play</button>
    <script>
      const playButton = document.getElementById("play");
      playButton.addEventListener("click", function () {
        const url = "/play?name=<%= name %>&id=<%= id %>";
        window.location.href = url;
      });
    </script>
  </body>
</html>
